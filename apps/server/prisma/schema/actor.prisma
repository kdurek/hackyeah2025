enum ActorType {
  DRONE
  ARMOR
  INFANTRY
}

enum ActorAlignment {
  HOSTILE
  NEUTRAL
  UNKNOWN
  FRIENDLY
}

model Actor {
  id             String         @id @default(ulid())
  mapCoordsLat   Float
  mapCoordsLon   Float
  localPositionX Float
  localPositionY Float
  localPositionZ Float
  rotationX      Float
  rotationY      Float
  rotationZ      Float
  type           ActorType
  alignment      ActorAlignment
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@map("actor")
}
